@model RoleViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Edit Role</h1>
<br />
<br />

<div class="row">
    <div class="col-6">
        <form asp-action="Update" asp-controller="Role">
            <input hidden asp-for="Id" />

            <partial name="~/Views/Role/PartialView/CreateEditPartialView.cshtml" model="@Model" />

            <div class="my-3">
                <a class="btn btn-info" asp-action="AddORemoveUser" asp-controller="Role" asp-route-roleId="@Model.Id">Add Or remove Users</a>
            </div>

            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>
